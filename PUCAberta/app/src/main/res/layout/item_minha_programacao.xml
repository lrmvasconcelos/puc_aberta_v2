<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="pucaberta.pucminas.com.viewmodel.ItemMinhaProgramacaoViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_16"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="@dimen/margin_60"
                android:layout_height="@dimen/margin_60"
                android:src="@drawable/ic_auditorios"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView3"
                android:gravity="center_horizontal"
                android:text="@={viewModel.data}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                tools:text="09/05 - 13:30"/>

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="5dp"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="@={viewModel.unidade}"-->
            <!--android:textColor="@color/colorPrimary"-->
            <!--tools:text="Coração Eucarístico"/>-->

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/view"
                android:layout_below="@+id/textView5"
                android:gravity="center_horizontal"
                android:text="@={viewModel.palestraHead}"
                android:layout_marginStart="@dimen/margin_5"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                tools:text="Grupo A - Engenharias"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:gravity="center_horizontal"
                android:text="@={viewModel.espaco}"
                android:textColor="@color/colorPrimary"
                tools:text="Teatro"/>

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/circleImageView"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_toEndOf="@+id/circleImageView"
                android:background="#C4CDE0"/>

            <View
                android:id="@+id/viewBotton"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/circleImageView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_5"
                android:background="#C4CDE0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/viewBotton"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:onClick="@{() -> viewModel.loadMap()}"
                android:text="@string/ver_no_mapa"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView6"/>

        </RelativeLayout>


    </LinearLayout>
</layout>